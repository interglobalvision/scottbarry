@import "kouto-swiss"
@import "helpers"
@import "fonts"

// ******************************************************

// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

$cols = 12
$gutter = 22px

.container
  margin: 0 auto
  width: 96%
  max-width: 2400px 

.row
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap
  &.reverse
    flex-direction: row-reverse

// FLEX POSITIONING

.justify-start
  justify-content: flex-start

.justify-center
  justify-content: center

.justify-end
  justify-content: flex-end

.align-start
  align-items: flex-start

.align-center
  align-items: center

.align-end
  align-items: flex-end

.align-content-start
  align-content: flex-start

.align-content-center
  align-content: center

.align-content-end
  align-content: flex-end

// COLUMN SIZES & OFFSETS

.col
  position: relative
  flex: 1 1 auto
  box-sizing: border-box
  max-width: 100%
  padding: 0 ($gutter / 2)
  margin-bottom: $gutter

.col-no-gutter
  padding-left: 0
  padding-right: 0

.col-no-margin-bottom
  margin-bottom: 0

for offset in 0..($cols - 1)
  .offset-s-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-s-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

// ******************************************************

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-small = 11px
$font-size-mid = $font-size-small * 1.5
$font-size-large = $font-size-small * 2
$font-size-extra = $font-size-small * 2.2

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-tighter = -0.02em
$font-tracking-wider = 0.05em

$font-sans = 'Moderat', font-stack('Helvetica')
$font-serif = font-stack('Times New Roman')

$color-black = rgb(0, 0, 0)
$color-black-soft = rgb(36, 36, 36)
$color-white = rgb(255, 255, 255)

$border-width = 2px

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  font-size: $font-size-small
  letter-spacing: $font-tracking-basic

body
  line-height: $font-leading-basic
  overflow-x: hidden

  // HTML ELEMENT STYLING

h1
  line-height: $font-leading-basic
  margin: 0

h2
  line-height: $font-leading-basic
  margin: 0

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold
  line-height: $font-leading-tighter
  letter-spacing: $font-tracking-tighter

.font-serif
  font-family: $font-serif

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize
  
.font-expanded
  transform-origin: top
  transform: scaleY(.7)
  &.underline-links
    a:link, a:active, a:visited 
      border-bottom: ($border-width + 1) solid $color-black

.font-size-small
  font-size: $font-size-small

.font-size-mid
  font-size: $font-size-mid

.font-size-large
  font-size: $font-size-large
  
.font-size-extra 
  font-size: $font-size-extra

.font-leading-tighter
  line-height: $font-leading-tighter

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center
  
.text-line-length 
  h1, h2, h3, p, div.wp-caption
    margin-left: auto
    margin-right: auto
    width: 85%
  div.wp-caption
    width: 85% !important

.margin-bottom-1rem
  margin-bottom: 1rem 

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none
  
.underline-links
  a:link, a:active, a:visited 
    border-bottom: $border-width solid $color-black

// ******************************************************

// BASIC
  
html
  height: 100%
  color: $color-black
  
body
  height: 100%
  background-color: $color-white

img
  max-width: 100%
  height: auto

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

.caption
  width: 70%
  margin-left: auto
  margin-right: auto
  
p.wp-caption-text
  text-align: center
  margin-top: $margin-micro
  
.caption, p.wp-caption-text
  font-size: 10px
  
// HEADER

#header
  width: 100%
  z-index: 100
  &.open
    color: $color-white
    height: 100%
    #main-menu
      background-color: unset !important
    .menu-item
      border-bottom: $border-width solid transparent
      &.active 
        border-bottom: $border-width solid $color-white
  &.projects-open
    .menu-item-info
      color: $color-black
        
#main-menu
  position: absolute
  z-index: 300
  top: 0
  left: 0
  width: 100%
  line-height: 1
  h1 
    line-height: 1

.sub-menu 
  display: none
  overflow-y: auto
  position: absolute
  background-color: $color-black-soft
  position: fixed
  top: 0
  left: 0
  z-index: 200
  text-align: center
  padding-top: 60px
  &.active
    display: block
  ul 
    padding: $margin-basic $margin-small
  li
    margin-bottom: 0
    a:hover
      font-style: italic
    
.sort-list-item a 
  border-bottom: ($border-width + 1) solid transparent
  &.active
    border-bottom: ($border-width + 1) solid $color-white
    
#projects-menu
  width: 75%
  height: 100%
  
#sort-menu
  width: 100%
    
// PROJECT
#project-text-holder
  p 
    margin: 0 auto
    width: 100%

// CONVERSATION

#conversation-holder
  position: relative
  h3 
    font-size: $font-size-mid
    position: relative
  img 
    display: block
    margin: 0 auto

// ******************************************************

// MEDIA QUERIES

@media screen and (max-width: 750px)
  
  .custom-layout-item
    margin-top: 0 !important
    img 
      min-width: 50% !important
    
@media screen and (max-width: 1150px)
  
  .custom-layout-item
    left: 0 !important

@media screen and (min-width: 568px)

  @import "responsive/mobile-landscape"

@media screen and (min-width: 750px)

  @import "responsive/tablet"

@media screen and (min-width: 1150px)

  @import "responsive/desktop"
