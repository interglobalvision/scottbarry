$font-size-small = 14px
$font-size-mid = 21px
$font-size-large = 28px
$font-size-extra = 32px

// ******************************************************

// TYPOGRAPHY

html
  font-size: $font-size-small
  
.font-size-small 
  font-size: $font-size-small
  
.font-size-mid 
  font-size: $font-size-mid
  
.font-size-large 
  font-size: $font-size-large
  
.font-size-extra 
  font-size: $font-size-extra
  
// TEXT RULES
  
.text-line-length 
  h1, h2, h3, p
    width: 65%
  div.wp-caption
    width: 65% !important
    
// ******************************************************

.caption
  width: 70%
  
p.wp-caption-text
  font-size: $font-size-small
  
// PROJECT
#project-text-holder
  p 
    width: 540px

// CONVERSATION

#conversation-holder
  h3 
    font-size: $font-size-mid
    position: absolute
    text-align: right 
    right: 85%